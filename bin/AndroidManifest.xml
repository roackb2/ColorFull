<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ntu.im.colorfull"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ntu.im.colorfull.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ntu.im.colorfull.CameraActivity"
            android:label="@string/title_activity_camera" />
        <activity
            android:name="ntu.im.colorfull.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="ntu.im.colorfull.ViewPhotoActivity"
            android:label="@string/title_activity_view_photo" >
        </activity>
        <activity
            android:name="ntu.im.colorfull.CloudPhotosActivity"
            android:label="@string/title_activity_cloud_photos" >
        </activity>
        <activity
            android:name="ntu.im.colorfull.OnlineGalleryActivity"
            android:label="@string/title_activity_online_gallery" >
        </activity>
        <activity
            android:name="ntu.im.colorfull.ViewServerPhotosActivity"
            android:label="@string/title_activity_view_server_photos" >
        </activity>
        <activity
            android:name="ntu.im.colorfull.ItemSelectedActivity"
            android:label="@string/title_activity_item_selected" >
        </activity>
    </application>

</manifest>
