

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineGalleryActivity" >

	
	<android.support.v4.view.ViewPager 
	    	xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/OnlineGalleryPager"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">		
	</android.support.v4.view.ViewPager>
	
	<ProgressBar
	    android:id="@+id/OnlineGalleryActivityProgressBar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"/>
	
	<TextView
	    android:id="@+id/OnlineGalleryProgressBarDescript"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/OnlineGalleryActivityProgressBar"
	    android:text="connecting to server..."/>"

</RelativeLayout>
